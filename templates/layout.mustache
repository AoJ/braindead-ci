<!DOCTYPE html>
<!--[if IE]>         <html class="ie" lang="en"> <![endif]-->
<!--[if !(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{{title}}{{^title}}Braindead CI{{/title}}</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/assets/css/website.css">
  </head>

  <body>
    <script src="/assets/jquery/jquery-1.8.3.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="/assets/bootstrap/js/bootstrap.js" type="text/javascript" charset="utf-8"></script>

    <div class="container">
      <div class="row">
        <div class="span3">
          <h1 class="top-left-title"><a href="/">Braindead CI</a></h1>
          <span style="position: relative; top: -10px; opacity: 0.7;"><a style="color:#333; font-style: italic;" href="/settings"><i class="icon-wrench"></i> Settings</a></span>
          {{#loggedUser}}
          <br>
          <span style="position: relative; top: -10px; opacity: 0.7;"><a style="color:#333; font-style: italic;" href="/logout"><i class="icon-off"></i> Logout</a></span>
          {{/loggedUser}}

          {{^firstTimeUse}}
          {{#loggedUser}}
            <ul class="nav nav-tabs nav-stacked" id="sidenav">
              {{#jobsNames}}
              <li><a href="/jobs/{{.}}">{{.}}</a></li>
              {{/jobsNames}}
            </ul>
            <br>
            <a href="/jobs/new" class="btn">New job</a>
          {{/loggedUser}}
          {{/firstTimeUse}}

          <hr>
          <strong>Executor status:</strong><br>
          {{#idle}}
            Braindead is idle
          {{/idle}}
          {{^idle}}
            Building {{currentJobName}}
          {{/idle}}
          <br><br>
          {{#someJobsQueued}}
            In the queue:
            <ul>
              {{#queuedJobs}}
                <li>{{.}}</li>
              {{/queuedJobs}}
            </ul>
          {{/someJobsQueued}}

        </div>

        <div class="span9">
          {{>content}}
        </div>
      </div>

    </div>

  </body>
</html>


