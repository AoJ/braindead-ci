<h2 class="title">Create a new job</h2>
<br><br>

{{#validationErrors}}
<div class="alert alert-error">
  <ul>
    {{#errors}}
      <li>{{.}}</li>
    {{/errors}}
  </ul>
</div>
{{/validationErrors}}

<form class="form-horizontal" method="post" action="/jobs/new">
  <!-- Name -->
  <div class="control-group">
    <label class="control-label" for="name">Job name</label>
    <div class="controls">
      <input type="text" class="input-xlarge" id="name" placeholder="e.g. Our cool website" name="name" value="{{userInput.name}}">
    </div>
  </div>

  <!-- Repo URL -->
  <div class="control-group">
    <label class="control-label" for="repo">Git repo</label>
    <div class="controls">
      <input type="text" class="input-xlarge" id="repo" placeholder="e.g. git@github.com:us/repo.git" name="repo" value="{{userInput.repo}}">
    </div>
  </div>

  <!-- Branch -->
  <div class="control-group">
    <label class="control-label" for="branch">Branch to build</label>
    <div class="controls">
      <input type="text" class="input-xlarge" id="branch" placeholder="e.g. master" name="branch" value="{{userInput.branch}}">
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </div>
</form>

