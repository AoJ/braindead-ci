<h2 class="title">Login</h2>
<br>
<br>

{{#validationErrors}}
<div class="alert alert-error">
  <ul>
    {{#errors}}
      <li>{{.}}</li>
    {{/errors}}
  </ul>
</div>
{{/validationErrors}}

<form class="form-horizontal" method="post" action="/login">
  <!-- login -->
  <div class="control-group">
    <label class="control-label" for="login">Login</label>
    <div class="controls">
      <input type="text" class="input-xlarge" id="login" name="login" value="{{userInput.login}}">
    </div>
  </div>

  <!-- password -->
  <div class="control-group">
    <label class="control-label" for="password">Password</label>
    <div class="controls">
      <input type="password" class="input-xlarge" id="password" name="password" value="{{userInput.password}}">
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn btn-primary">Save settings</button>
    </div>
  </div>
</form>
